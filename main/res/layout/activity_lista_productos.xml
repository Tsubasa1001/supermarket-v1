<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaProductosActivity">

    <FrameLayout
        android:id="@+id/emitirCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:weightSum="1"
            >

            <Button
                android:id="@+id/btn_añadir_carrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimary"
                android:text="Añadir al listaCarrito "
                android:textColor="@android:color/white"
                tools:layout_editor_absoluteX="271dp"
                tools:layout_editor_absoluteY="473dp" />

            <Button
                android:id="@+id/btn_ir_carrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.5"
                android:background="@color/colorPrimary"
                android:text="Ir al listaCarrito "
                android:textColor="@android:color/white"
                tools:layout_editor_absoluteX="271dp"
                tools:layout_editor_absoluteY="473dp" />

        </LinearLayout>

   </FrameLayout>

    <ListView
        android:id="@+id/lv_productos"
        android:layout_width="match_parent"
        android:layout_height="499dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/emitirCompra"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>